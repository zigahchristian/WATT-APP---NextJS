// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

enum UserRole {
  ADMIN
  USER
  TEACHER
}

model User {
  id             String       @id @default(cuid())
  firstname      String?
  lastname       String?
  email          String       @unique
  emailVerified  DateTime?    @map("email_verified")
  image          String?
  imagePublicUrl String?
  password       String?
  role           UserRole?    @default(USER)
  Account        Account[]
  quizzes        Quiz[]
  quizReports    QuizReport[]

  @@map("users")
}

model Student {
  id                    String       @id @default(cuid())
  studentId             String       @unique
  firstName             String
  lastName              String
  gender                String
  dob                   DateTime
  email                 String       @unique
  phone                 String
  address               String
  course                String
  enrollmentdate        DateTime     @default(now())
  emergencyContactName  String?      @default("")
  emergencyContactPhone String?      @default("")
  imageUrl              String?
  status                String       @default("ACTIVE")
  createdAt             DateTime     @default(now())
  updatedAt             DateTime     @updatedAt
  fees                  Fee[]
  courses               Course[]
  gradings              Grading[]
  attendances           Attendance[]
  quizzes               Quiz[]
  quizReports           QuizReport[]
}

model Quiz {
  id          String       @id @default(cuid())
  code        String       @unique
  title       String
  description String?
  createdById String
  createdBy   User         @relation(fields: [createdById], references: [id])
  timeLimit   Int          @default(300) // Time in seconds
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  questions   Question[]
  quizReports QuizReport[]
  student     Student?     @relation(fields: [studentId], references: [id])
  studentId   String?
}

model Question {
  id            String   @id @default(cuid())
  quizId        String
  quiz          Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  text          String
  options       Json // JSON array of options
  correctAnswer Int // Index of correct answer
  points        Int      @default(1)
  order         Int
  createdAt     DateTime @default(now())
}

model QuizReport {
  id             String   @id @default(cuid())
  quizId         String
  userId         String
  quiz           Quiz     @relation(fields: [quizId], references: [id])
  user           User     @relation(fields: [userId], references: [id])
  score          Int
  totalQuestions Int
  timeTaken      Int // Time taken in seconds
  answers        Json // Store user's answers
  completedAt    DateTime @default(now())
  student        Student? @relation(fields: [studentId], references: [id])
  studentId      String?
}

enum StudentStatus {
  ACTIVE
  INACTIVE
  GRADUATED
}

model Fee {
  id          String    @id @default(cuid())
  studentId   String
  student     Student   @relation(fields: [studentId], references: [id], onDelete: Cascade)
  amount      Float
  paymentDate DateTime  @default(now())
  dueDate     DateTime
  status      FeeStatus @default(PENDING)
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Course {
  id         String   @id @default(cuid())
  name       String
  code       String   @unique
  instructor String
  day        String
  startTime  String
  endTime    String
  duration   String
  studentId  String?
  student    Student? @relation(fields: [studentId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Timetable {
  id        String   @id @default(uuid())
  timeSlots Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Grading {
  id             String   @id @default(cuid())
  studentId      String
  subject        String
  assessmentType String // e.g., "Assignment", "Quiz", "Exam", "Project"
  score          Float
  maxScore       Float    @default(100)
  weight         Float    @default(1.0)
  date           DateTime
  comments       String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@index([studentId])
  @@index([subject])
  @@index([date])
}

model GradeConfig {
  id                String   @id @default(uuid())
  subject           String   @unique
  assignmentsWeight Float    @default(0.2)
  quizzesWeight     Float    @default(0.2)
  projectsWeight    Float    @default(0.2)
  examsWeight       Float    @default(0.4)
  passingScore      Float    @default(60)
  gradingScale      Json // JSON structure for grading scale
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Attendance {
  id        String   @id @default(cuid())
  studentId String
  date      DateTime
  status    String // "Present", "Absent", "Late", "Excused"
  subject   String
  remarks   String?
  createdAt DateTime @default(now())

  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([studentId, date, subject])
  @@index([studentId])
  @@index([date])
}

model AttendanceConfig {
  id        String   @id @default(cuid())
  subject   String
  dayOfWeek String // "Monday", "Tuesday", etc.
  startTime String
  endTime   String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([subject, dayOfWeek])
}

enum FeeStatus {
  PENDING
  PAID
  OVERDUE
}
